{
  "name": "overlay-live-comment-viewer",
  "version": "0.0.0",
  "description": "",
  "main": "dist/main.js",
  "scripts": {
    "start": "run-s clean:dist build:dev serve",
    "clean:dist": "rimraf dist",
    "clean:cache": "rimraf node_modules/.cache",
    "build:dev": "cross-env NODE_ENV=\"development\" webpack --progress",
    "build:pro": "cross-env NODE_ENV=\"production\" webpack --progress",
    "package:winx64": "electron-builder --win --x64",
    "package:macx64": "electron-builder --mac --x64",
    "build": "run-s clean:dist clean:cache build:pro package:winx64",
    "serve": "electron .",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "overlay-live-comment-viewer",
    "directories": {
      "output": "package"
    },
    "files": [
      "dist",
      "package.json",
      "package-lock.json"
    ],
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LenTakayama/Overlay-Live-Comment-Viewer.git"
  },
  "author": "LenTakayama",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/LenTakayama/Overlay-Live-Comment-Viewer/issues"
  },
  "homepage": "https://github.com/LenTakayama/Overlay-Live-Comment-Viewer#readme",
  "devDependencies": {
    "@types/webpack": "^4.41.21",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "babel-eslint": "^10.1.0",
    "cache-loader": "^4.1.0",
    "cross-env": "^7.0.2",
    "css-loader": "^4.2.2",
    "electron": "^10.1.1",
    "electron-builder": "^22.8.0",
    "eslint": "^7.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "fork-ts-checker-webpack-plugin": "^5.1.0",
    "html-webpack-plugin": "^4.4.1",
    "mini-css-extract-plugin": "^0.11.0",
    "node-sass": "^4.14.1",
    "npm-run-all": "^4.1.5",
    "optimize-css-assets-webpack-plugin": "^5.0.4",
    "postcss-loader": "^3.0.0",
    "postcss-sorting": "^5.0.1",
    "prettier": "^2.1.1",
    "rimraf": "^3.0.2",
    "sass-loader": "^10.0.1",
    "stylelint": "^13.7.0",
    "thread-loader": "^2.1.3",
    "ts-loader": "^8.0.3",
    "typescript": "^4.0.2",
    "url-loader": "^4.1.0",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12"
  },
  "dependencies": {}
}
